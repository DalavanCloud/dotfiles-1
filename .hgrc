[extensions]
pager =
color =
graphlog =
rebase =
shelve =
record =

[color]
status.modified = blue bold
status.added = green
status.removed = red
status.deleted = cyan
status.unknown = magenta
status.ignored = black bold

[pager]
pager = LESS='FRX' less
attend = log diff tree show

[alias]
tree = log -G
diff = diff -g
show = diff -c tip

[defaults]
incoming = -G --stat
